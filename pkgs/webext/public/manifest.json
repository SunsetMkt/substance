{
  "manifest_version": 3,
  "name": "Substance",
  "description": "Fine-tuned HTML-to-Markdown extractor for any website",
  "version": "1.0",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+I",
        "mac": "Command+MacCtrl+I"
      }
    },
    "extractCurrentPage": {
      "suggested_key": {
        "default": "Alt+E",
        "mac": "Command+MacCtrl+E"
      },
      "description": "Extract current page by selection or whole HTML"
    }
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "contextMenus",
    "activeTab"
  ]
}
